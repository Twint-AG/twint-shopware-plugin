{% block twint_certificate_block %}
    <div>
        <sw-file-input
                v-model="currentCertFile"
                :allowed-mime-types="['application/x-pkcs12']"
                :maxFileSize="8*1024*1024"
                @change="onFileChange"
                required
        >
            <template #caption-label v-if="certificate == null || certificate == ''">
                {{ $tc('twint.settings.certificate.placeholder') }}
            </template>

            <template #caption-label v-if="certificate != null && certificate != ''">
                {{ $tc('twint.settings.certificate.notice.label') }}
            </template>
        </sw-file-input>

        <sw-password-field
                v-if="certificate == '' || certificate == null"
                v-model:value="currentPassword"
                :entity-collection="null"
                :error="passwordError"
                class="twint-config-field"
                :label="$tc('twint.settings.certificate.password.label')"
                :help-text="$tc('twint.settings.certificate.password.helpText')"
                @blur="updatePassword"
                autocomplete="off"
                required
        >
            <template #suffix>
                {% block twint_certificate_password_suffix_block %}
                    <sw-icon name="regular-low-vision" size="22px"></sw-icon>
                {% endblock %}
            </template>
        </sw-password-field>
    </div>
{% endblock %}

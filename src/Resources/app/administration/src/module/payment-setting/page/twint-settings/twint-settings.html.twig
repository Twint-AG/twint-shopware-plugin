{% block twint_payment %}
    <sw-page class="twint-payment">
        {% block twint_payment_header %}
            <template #smart-bar-header>
                <h2>
                    {{ $tc('sw-settings.index.title') }}
                    <sw-icon name="regular-chevron-right-xs" small></sw-icon>
                    {{ $tc('twint.general.menuItem') }}
                </h2>
            </template>
        {% endblock %}

        {% block twint_payment_actions %}
            <template #smart-bar-actions>
                {% block twint_payment_settings_actions_save %}
                    <sw-button-process
                            class="sw-settings-login-registration__save-action"
                            :isLoading="isLoading"
                            :processSuccess="isSaveSuccessful"
                            :disabled="isLoading || isTesting || isDisabled"
                            variant="primary"
                            @process-finish="saveFinish"
                            @update-lock="updateLock"
                            @click="onTest"
                            >
                        <span v-if="isTesting">
                            {{ $tc('twint.settings.button.testing') }}
                        </span>
                        <span v-if="!isTesting">
                            {{ $tc('twint.settings.button.save') }}
                        </span>
                    </sw-button-process>
                {% endblock %}
            </template>
        {% endblock %}

        {% block twint_payment_settings_content %}
            <template #content>
                <sw-card-view>
                    <sw-system-config
                            class="twint-config__wrapper"
                            ref="systemConfig"
                            sales-channel-switchable
                            inherit
                            domain="TwintPayment.settings"
                            @config-changed="onChanged"
                    >
                    </sw-system-config>
                </sw-card-view>
            </template>
        {% endblock %}
    </sw-page>
{% endblock %}

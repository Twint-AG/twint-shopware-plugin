{% sw_extends "@Storefront/storefront/component/checkout/offcanvas-cart.html.twig" %}

{% set fastButton = page.extensions['TwintFastCheckoutButton'] %}

{% block component_offcanvas_cart_actions_checkout %}
    {{ parent() }}

    {% block twint_buy_button_plp %}
        {% if fastButton is defined and fastButton %}
            <button class="btn w-100 mt-1 {{ isCartNotEmpty ? 'btn-secondary' : 'btn-light disabled' }}" title="{{ fastButton.getName() }}" aria-label="{{ fastButton.getName() }}">
                {{ fastButton.getName() }}
            </button>
        {% endif %}
    {% endblock %}

{% endblock %}

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="./parts/controller.xml"/>
        <import resource="./parts/subscriber.xml"/>
        <import resource="./parts/scheduler.xml"/>
        <import resource="./parts/handler.xml"/>
        <import resource="./parts/dal.xml"/>
        <import resource="./parts/monitoring.xml"/>
        <import resource="./parts/express_checkout.xml"/>
    </imports>
    <services>

        <service id="Twint\Core\Util\CredentialValidatorInterface" class="Twint\Core\Util\CredentialValidator">
            <argument type="service" id="Twint\Core\Util\CryptoHandler"/>
        </service>

        <service id="Twint\Core\Service\SettingServiceInterface" class="Twint\Core\Service\SettingService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="Twint\Core\Util\CredentialValidatorInterface"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Twint\Util\Method\RegularPaymentMethod">
            <tag name="twint.method.definition"/>
        </service>

        <service id="Twint\Util\Method\ExpressPaymentMethod">
            <tag name="twint.method.definition"/>
        </service>

        <service id="Twint\Util\PaymentMethodRegistry">
            <argument type="service" id="service_container"/>
            <argument type="service" id="payment_method.repository"/>
            <argument type="tagged_iterator" tag="twint.method.definition"/>
        </service>

        <service id="Twint\Core\Service\PaymentService">
            <argument type="service" id="twint_reversal_history.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="Twint\Core\Factory\ClientBuilder"/>
            <argument type="service" id="twint_transaction_log_writer"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\CashRounding"/>
            <argument type="service" id="Twint\Core\Service\OrderService"/>
            <argument type="service" id="Twint\Core\Service\ApiService"/>
        </service>

        <service id="Twint\Core\Service\OrderService">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="state_machine.repository"/>
            <argument type="service" id="state_machine_state.repository"/>
            <argument type="service" id="Twint\Core\Repository\PairingRepository"/>
        </service>

        <service id="Twint\Core\Util\CryptoHandler" public="true">
            <argument>%env(APP_SECRET)%</argument>
        </service>

        <service id="Twint\Core\Factory\ClientBuilder">
            <argument type="service" id="Twint\Core\Service\SettingServiceInterface"/>
            <argument type="service" id="Twint\Core\Util\CryptoHandler"/>
        </service>

        <service id="twint.twig_extension"
                 class="Twint\Extension\TwintExtension"
                 public="false">
            <tag name="twig.extension"/>
        </service>

        <service id="Twint\Core\DataAbstractionLayer\Entity\TransactionLog\TwintTransactionLogDefinition">
            <tag name="shopware.entity.definition" entity="twint_transaction_log"/>
        </service>

        <service id="twint_transaction_log_writer"
                 class="Twint\Core\Handler\TransactionLog\TransactionLogDatabaseWriter">
            <argument type="service" id="twint_transaction_log.repository"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="twint_reversal_history_writer"
                 class="Twint\Core\Handler\ReversalHistory\ReversalHistoryDatabaseWriter">
            <argument type="service" id="twint_reversal_history.repository"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="Twint\Core\Service\ApiService">
            <argument type="service" id="twint_transaction_log.repository"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="Twint\Core\Service\CurrencyService">
            <argument type="service" id="currency.repository"/>
        </service>

        <service id="Twint\Core\Service\PairingService">
            <argument type="service" id="twint_pairing.repository"/>
            <argument type="service" id="Twint\Core\Service\ApiService"/>
            <argument type="service" id="Twint\Core\Factory\ClientBuilder"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="Twint\Core\Service\OrderService"/>
        </service>

        <service id="Twint\Core\Repository\PairingRepository">
            <argument type="service" id="twint_pairing.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\SalesChannel\CartService"/>

        </service>

        <service id="Twint\Command\TwintPollCommand">
            <argument type="service" id="Twint\Core\Repository\PairingRepository" />
            <argument type="service" id="Twint\ExpressCheckout\Service\Monitoring\MonitoringService" />
            <tag name="console.command"/>
        </service>
    </services>
</container>

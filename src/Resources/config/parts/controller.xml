<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Twint\Storefront\Controller\PaymentController" public="true">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="Twint\Core\Util\CryptoHandler"/>
            <argument type="service" id="Twint\Core\Service\PaymentService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setTwig">
                <argument type="service" id="twig"/>
            </call>
        </service>

        <service id="Twint\Storefront\Controller\CheckoutController" public="true">
            <argument type="service" id="twint.service.express.checkout"/>
            <argument type="service" id="Twint\Core\Util\CryptoHandler"/>
            <argument type="service" id="Twint\ExpressCheckout\Repository\PairingRepository"/>
            <argument type="service" id="Twint\Core\Service\PaymentService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setTwig">
                <argument type="service" id="twig"/>
            </call>
        </service>

        <service id="Twint\Administration\Controller\TwintController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setEncryptor">
                <argument type="service" id="Twint\Core\Util\CryptoHandler"/>
            </call>
            <call method="setValidator">
                <argument type="service" id="Twint\Core\Util\CredentialValidatorInterface"/>
            </call>
            <call method="setPaymentService">
                <argument type="service" id="Twint\Core\Service\PaymentService"/>
            </call>
            <call method="setReversalHistoryWriter">
                <argument type="service" id="twint_reversal_history_writer"/>
            </call>
            <call method="setTranslator">
                <argument type="service" id="translator"/>
            </call>
            <call method="setCashRounding">
                <argument type="service" id="Shopware\Core\Checkout\Cart\Price\CashRounding"/>
            </call>
            <tag name="controller.service_arguments"/>
        </service>

    </services>
</container>

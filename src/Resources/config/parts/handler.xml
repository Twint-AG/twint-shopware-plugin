<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Twint\Core\Handler\TwintRegularPaymentHandler"
                 class="Twint\Core\Handler\TwintRegularPaymentHandler">
            <argument type="service"
                      id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="Twint\Core\Service\PaymentService"/>
            <argument type="service" id="Twint\Core\Util\CryptoHandler"/>
            <argument type="service" id="router"/>
            <tag name="shopware.payment.method.async"/>
        </service>

        <service id="Twint\Core\Handler\TwintExpressPaymentHandler"
                 class="Twint\Core\Handler\TwintRegularPaymentHandler">
            <argument type="service"
                      id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="Twint\Core\Service\PaymentService"/>
            <argument type="service" id="Twint\Core\Util\CryptoHandler"/>
            <argument type="service" id="router"/>
            <tag name="shopware.payment.method.async"/>
        </service>

        <service id="Twint\Core\Handler\TwintRefundPaymentHandler"
                 class="Twint\Core\Handler\TwintRefundPaymentHandler">
            <argument type="service"
                      id="Shopware\Core\Checkout\Order\Aggregate\OrderTransactionCaptureRefund\OrderTransactionCaptureRefundStateHandler"/>
            <argument type="service" id="Twint\Core\Service\PaymentService"/>
            <argument type="service" id="logger"/>
            <tag name="shopware.payment.refund_handler"/>
        </service>

    </services>
</container>

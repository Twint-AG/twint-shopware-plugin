<?xml version="1.0" encoding="UTF-8"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/trunk/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>Display options</title>
        <title lang="de-DE">Display options</title>
        <title lang="fr-FR">Display options</title>
        <title lang="it-IT">Display options</title>

        <input-field type="multi-select">
            <name>screens</name>
            <label>Display screens</label>
            <label lang="de-DE">Display screens</label>
            <label lang="fr-FR">Display screens</label>
            <label lang="it-IT">Display screens</label>

            <helpText>Where users see the TWINT checkout button</helpText>
            <helpText lang="de-DE">Where users see the TWINT checkout button</helpText>
            <helpText lang="fr-FR">Where users see the TWINT checkout button</helpText>
            <helpText lang="it-IT">Where users see the TWINT checkout button</helpText>
            <options>
                <option>
                    <id>PDP</id>
                    <name>Product detail page</name>
                    <name lang="de-DE">Product detail page</name>
                    <name lang="fr-FR">Product detail page</name>
                    <name lang="it-IT">Product detail page</name>
                </option>
                <option>
                    <id>PLP</id>
                    <name>Product listing page</name>
                    <name lang="de-DE">Product listing page</name>
                    <name lang="fr-FR">Product listing page</name>
                    <name lang="it-IT">Product listing page</name>
                </option>
                <option>
                    <id>CART</id>
                    <name>Cart page</name>
                    <name lang="de-DE">Cart page</name>
                    <name lang="fr-FR">Cart page</name>
                    <name lang="it-IT">Cart page</name>
                </option>
                <option>
                    <id>CART_FLYOUT</id>
                    <name>Cart flyout</name>
                    <name lang="de-DE">Cart flyout</name>
                    <name lang="fr-FR">Cart flyout</name>
                    <name lang="it-IT">Cart flyout</name>
                </option>
            </options>
            <defaultValue>["PDP", "PLP", "CART"]</defaultValue>
        </input-field>
    </card>
</config>

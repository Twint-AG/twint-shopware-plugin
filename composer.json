{
    "name": "twint-ag/twint-shopware-plugin",
    "description": "TWINT payment plugin for Shopware 6",
    "keywords": [
        "twint",
        "twint.ch",
        "switzerland",
        "checkout",
        "express checkout",
        "payment",
        "shopware",
        "shopware6"
    ],
    "type": "shopware-platform-plugin",
    "version": "1.0.0-RC24",
    "license": "MIT",
    "authors": [
        {
            "name": "TWINT",
            "email": "plugin@twint.ch",
            "role": "Maintainer",
            "homepage": "https://www.twint.ch/"
        }
    ],
    "require": {
        "twint-ag/sdk": "^1.0",
        "chillerlan/php-qrcode": "4.3.4",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "symplify/easy-coding-standard": "^12.1",
        "slevomat/coding-standard": "^8.15",
        "rector/rector": "^1.0",
        "symfony/browser-kit": "*",
        "dg/bypass-finals": "^1.8",
        "shopware/core": ">=6.5.0.0"
    },
    "extra": {
        "shopware-plugin-class": "Twint\\TwintPayment",
        "plugin-icon": "src/Resources/public/plugin.png",
        "copyright": "(c) by TWINT 2024",
        "label": {
            "en-GB": "TWINT"
        }
    },
    "autoload": {
        "psr-4": {
            "Twint\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Twint\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "symfony/runtime": true
        }
    }
}

{
    "name": "twint/twint",
    "description": "TWINT Payment Plugin for Shopware 6",
    "type": "shopware-platform-plugin",
    "version": "0.0.2",
    "license": "MIT",
    "authors": [
        {
            "name": "TWINT"
        },
        {
            "name": "NFQ"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "twint-ch/twint-sdk": "dev-develop",
        "chillerlan/php-qrcode": "4.3.4",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "symplify/easy-coding-standard": "^12.1",
        "slevomat/coding-standard": "^8.15",
        "rector/rector": "^1.0",
        "symfony/browser-kit": "*",
        "dg/bypass-finals": "^1.8",
        "shopware/core": ">=6.5.0.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://git.nfq.asia/twint-ag/php-sdk.git"
        }
    ],
    "extra": {
        "shopware-plugin-class": "Twint\\TwintPayment",
        "plugin-icon": "src/Resources/public/plugin.png",
        "copyright": "(c) by Twint 2024 (c) by NFQ",
        "label": {
            "de-DE": "TWINT Zahlung",
            "en-GB": "TWINT Payment",
            "fr-FR": "Paiement TWINT"
        },
        "description": {
            "de-DE": "TWINT Zahlungs-Plugin f√ºr Shopware 6",
            "en-GB": "TWINT Payment Plugin for Shopware 6",
            "fr-FR": "Plugin de paiement TWINT pour Shopware 6"
        },
        "supportLink": {
            "de-DE": "https://www.twint.ch/privatkunden/support/?lang=de",
            "en-GB": "https://www.twint.ch/en/private-customers/support/"
        }
    },
    "autoload": {
        "psr-4": {
            "Twint\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Twint\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "symfony/runtime": true
        }
    }
}
